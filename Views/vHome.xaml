<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="gTipanS5.Views.vHome"
             Title="vHome">
    <VerticalStackLayout
        Spacing="25">
        
                 
    <Label Text="SEMANA 5 SQLITE"
            HorizontalOptions="Center"
           FontSize="28"/>
        
        
    <Entry x:Name="txtNombre"
           Placeholder="Ingrese su nombre"/>
    <Grid Padding="5" RowSpacing="1" ColumnSpacing="1">
        
        
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            
        </Grid.RowDefinitions>
        
        <Grid.ColumnDefinitions>
            
            <ColumnDefinition/>
            
        </Grid.ColumnDefinitions>
        
            <Button x:Name="btnInsertar"
                    Text="Añadir persona"
                    Grid.Row="0"
                    Grid.Column="0"
                    Clicked="btnInsertar_Clicked"/>

        <Label x:Name="status"
                  Grid.Row="1"
                  Grid.Column="0"
                  TextColor="Red"/>


        <Button x:Name="btnlistar"
         Text="Añadir persona"
         Grid.Row="2"
         Grid.Column="0"
         Clicked="btnlistar_Clicked"/>

            <CollectionView x:Name="ListaPersonas"
                            Grid.Row="3"
                           Grid.Column="0"
        <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="2*"/>
                        </Grid.ColumnDefinitions>
                        <Label Text="{Binding Id}" Grid.Column="0"/>
                        <Label Text="{Binding Nombre}" Grid.Column="1"/>


                    </Grid>
                </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </Grid>
   </VerticalStackLayout>
</ContentPage>